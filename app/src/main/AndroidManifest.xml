<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsu.wordsfactory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreenStyle">
        <activity
            android:name="com.tsu.wordsfactory.dictionary.DictionaryActivity"
            android:exported="false"
            android:label="@string/title_activity_dictionary" />
        <activity
            android:name="com.tsu.wordsfactory.sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.tsu.wordsfactory.intro.IntroductionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>